<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.proximi.tourguide.mainmenu"
    android:background="@drawable/bg1">

    <Button
        android:id="@+id/buttonSejarah"
        android:layout_width="180dip"
        android:layout_height="80dip"
        android:background="#00000000"
        android:drawableLeft="@drawable/btnhistory"
        android:text="HISTORY"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buttonStart"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="180dip"
        android:layout_height="80dip"
        android:background="#00000000"
        android:drawableLeft="@drawable/btnstart"
        android:text="START TOUR"
        android:textColor="@android:color/white"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/buttonSejarah"
        android:layout_centerHorizontal="true"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="180dp"
        android:layout_height="80dip"
        android:background="#00000000"
        android:drawableLeft="@drawable/btnabout"
        android:text="ABOUT"
        android:textColor="@android:color/white"
        android:layout_marginTop="42dp"
        android:textSize="16sp"
        android:layout_below="@+id/buttonSejarah"
        android:layout_alignStart="@+id/buttonSejarah" />


</RelativeLayout>
